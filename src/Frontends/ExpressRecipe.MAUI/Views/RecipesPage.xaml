<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExpressRecipe.MAUI.ViewModels"
             x:Class="ExpressRecipe.MAUI.Views.RecipesPage"
             x:DataType="vm:RecipesViewModel"
             Title="Recipes">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                  Placeholder="Search recipes..."
                  Text="{Binding SearchText}"
                  Margin="8"/>

        <!-- Filters -->
        <Frame Grid.Row="1" Padding="12" Margin="8,0" CornerRadius="8" BackgroundColor="{StaticResource Gray100}">
            <VerticalStackLayout Spacing="8">
                <!-- Safe Only Toggle -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0"
                          Text="Show safe recipes only"
                          VerticalOptions="Center"/>
                    <Switch Grid.Column="1"
                           IsToggled="{Binding ShowSafeOnly}"
                           OnColor="{StaticResource Primary}"/>
                </Grid>

                <!-- Dietary Filters -->
                <FlexLayout BindableLayout.ItemsSource="{Binding DietaryOptions}"
                           Wrap="Wrap"
                           JustifyContent="Start">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Frame Padding="8,4"
                                  Margin="4"
                                  CornerRadius="12"
                                  HasShadow="False"
                                  BackgroundColor="{StaticResource Primary}">
                                <Label Text="{Binding .}"
                                      TextColor="White"
                                      FontSize="12"/>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipesViewModel}}, Path=ToggleDietaryFilterCommand}"
                                                         CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </VerticalStackLayout>
        </Frame>

        <!-- Recipes List -->
        <RefreshView Grid.Row="2"
                    IsRefreshing="{Binding IsRefreshing}"
                    Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding FilteredRecipes}"
                           SelectionMode="None"
                           EmptyView="No recipes found">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:RecipeItemViewModel">
                        <Frame Margin="8" Padding="0" CornerRadius="12" HasShadow="True">
                            <Grid RowDefinitions="180,Auto,Auto">
                                <!-- Recipe Image -->
                                <Image Grid.Row="0"
                                      Source="{Binding ImageUrl}"
                                      Aspect="AspectFill"
                                      HeightRequest="180"/>

                                <!-- Content -->
                                <Grid Grid.Row="1" Padding="12" RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                                    <!-- Title and Favorite -->
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                              Text="{Binding Name}"
                                              FontSize="18"
                                              FontAttributes="Bold"
                                              MaxLines="2"/>

                                        <Label Grid.Column="1"
                                              Text="{Binding IsFavorite, Converter={StaticResource BoolToHeartConverter}}"
                                              FontSize="24"
                                              VerticalOptions="Start">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipesViewModel}}, Path=SaveFavoriteCommand}"
                                                                     CommandParameter="{Binding .}"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>

                                    <!-- Description -->
                                    <Label Grid.Row="1"
                                          Text="{Binding Description}"
                                          FontSize="14"
                                          TextColor="{StaticResource Gray600}"
                                          MaxLines="2"/>

                                    <!-- Tags -->
                                    <Label Grid.Row="2"
                                          Text="{Binding DietaryTagsText}"
                                          FontSize="12"
                                          TextColor="{StaticResource Primary}"
                                          IsVisible="{Binding DietaryTagsText, Converter={StaticResource IsNotNullConverter}}"/>
                                </Grid>

                                <!-- Footer -->
                                <Grid Grid.Row="2" Padding="12,0,12,12" ColumnDefinitions="Auto,*,Auto,Auto">
                                    <!-- Time -->
                                    <HorizontalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="â±"
                                              FontSize="16"/>
                                        <Label Text="{Binding TimeText}"
                                              FontSize="14"
                                              VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                    <!-- Safety Badge -->
                                    <Frame Grid.Column="2"
                                          Padding="6,3"
                                          CornerRadius="8"
                                          BackgroundColor="{Binding SafetyBadgeColor}"
                                          HasShadow="False">
                                        <Label Text="{Binding SafetyBadgeText}"
                                              TextColor="White"
                                              FontSize="12"
                                              FontAttributes="Bold"/>
                                    </Frame>

                                    <!-- Rating -->
                                    <Label Grid.Column="3"
                                          Text="{Binding RatingText}"
                                          FontSize="14"
                                          VerticalOptions="Center"
                                          Margin="8,0,0,0"/>
                                </Grid>
                            </Grid>

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipesViewModel}}, Path=ViewRecipeCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
