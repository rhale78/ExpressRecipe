<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpressRecipe.MAUI.Views.MainPage"
             Title="ExpressRecipe">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="20">
            <Label Text="Welcome to ExpressRecipe"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Frame Padding="16" CornerRadius="12">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                    <Image Source="barcode.png" WidthRequest="60" HeightRequest="60"/>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="Scan Products" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="Use barcode scanner or AI recognition"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnScannerTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Padding="16" CornerRadius="12">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                    <Image Source="inventory.png" WidthRequest="60" HeightRequest="60"/>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="Manage Inventory" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="Track your food items and expiration dates"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnInventoryTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Padding="16" CornerRadius="12">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                    <Image Source="shopping.png" WidthRequest="60" HeightRequest="60"/>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="Shopping List" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="Create and manage shopping lists"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnShoppingTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Padding="16" CornerRadius="12">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                    <Image Source="recipe.png" WidthRequest="60" HeightRequest="60"/>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="Browse Recipes" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="Discover safe recipes for your dietary needs"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRecipesTapped"/>
                </Frame.GestureRecognizers>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
