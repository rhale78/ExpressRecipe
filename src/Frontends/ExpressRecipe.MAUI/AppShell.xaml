<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpressRecipe.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ExpressRecipe.MAUI.Views"
    FlyoutBackgroundColor="{StaticResource Primary}"
    FlyoutWidth="280">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="150" BackgroundColor="{StaticResource PrimaryDark}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="app_logo.png"
                   HeightRequest="60"
                   WidthRequest="60"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="1"
                   Text="ExpressRecipe"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Main Pages -->
    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent Route="main" ContentTemplate="{DataTemplate views:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Scanner" Icon="barcode.png">
        <ShellContent Route="scanner" ContentTemplate="{DataTemplate views:ScannerPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Search" Icon="search.png">
        <ShellContent Route="search" ContentTemplate="{DataTemplate views:SearchPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Inventory" Icon="inventory.png">
        <ShellContent Route="inventory" ContentTemplate="{DataTemplate views:InventoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Shopping List" Icon="shopping.png">
        <ShellContent Route="shopping" ContentTemplate="{DataTemplate views:ShoppingListPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Recipes" Icon="recipe.png">
        <ShellContent Route="recipes" ContentTemplate="{DataTemplate views:RecipesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Meal Plans" Icon="calendar.png">
        <ShellContent Route="mealplans" ContentTemplate="{DataTemplate views:MealPlanPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Recall Alerts" Icon="warning.png">
        <ShellContent Route="recalls" ContentTemplate="{DataTemplate views:RecallAlertsPage}" />
    </FlyoutItem>

    <MenuItem Text="Settings" IconImageSource="settings.png" Clicked="OnSettingsClicked" />
    <MenuItem Text="Profile" IconImageSource="user.png" Clicked="OnProfileClicked" />
    <MenuItem Text="Logout" IconImageSource="logout.png" Clicked="OnLogoutClicked" />

</Shell>
