@inherits LayoutComponentBase
@using ExpressRecipe.BlazorWeb.Services
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="page">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">üçΩÔ∏è ExpressRecipe</a>
                <button class="navbar-toggler" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/recipes">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/inventory">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/shopping">Shopping</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (AuthService.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/profile">üë§ Profile</a>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline-light btn-sm" @onclick="HandleLogoutAsync">Logout</button>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm ms-2" href="/register">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @Body
    </main>

    <footer class="mt-5 py-3 bg-light">
        <div class="container text-center">
            <p class="text-muted">ExpressRecipe &copy; 2025 - Your Dietary Management Solution</p>
        </div>
    </footer>
</div>

@code {
    private async Task HandleLogoutAsync()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/", forceLoad: true);
    }
}
