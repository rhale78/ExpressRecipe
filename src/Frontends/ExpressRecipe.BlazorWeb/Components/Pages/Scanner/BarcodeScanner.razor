        ToastService.ShowInfo("Coming Soon", "Add to inventory feature");
    }

    private void AddToShoppingList()
    {
        // TODO: Implement add to shopping list
        ToastService.ShowInfo("Coming Soon", "Add to shopping list feature");
    }
}
